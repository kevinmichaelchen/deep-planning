---
const base = import.meta.env.BASE_URL.replace(/\/?$/, "/");
---

<header class="border-b border-border bg-parchment/80 backdrop-blur-sm sticky top-0 z-50">
  <nav class="max-w-6xl mx-auto w-full px-6 py-4 flex items-center justify-between">
    <a href={base} class="group flex items-center gap-2.5">
      <span class="font-serif text-xl font-semibold tracking-tight text-ink group-hover:text-crimson transition-colors">
        DeepPlanning
      </span>
    </a>
    <ul class="flex gap-8 text-[13px] font-medium tracking-wide uppercase">
      <li>
        <a href={base} class="text-ink-muted hover:text-ink transition-colors relative after:absolute after:bottom-[-4px] after:left-0 after:w-0 after:h-[1.5px] after:bg-crimson after:transition-all hover:after:w-full">
          Home
        </a>
      </li>
      <li>
        <a href={`${base}papers/`} class="text-ink-muted hover:text-ink transition-colors relative after:absolute after:bottom-[-4px] after:left-0 after:w-0 after:h-[1.5px] after:bg-crimson after:transition-all hover:after:w-full">
          Papers
        </a>
      </li>
      <li>
        <a href={`${base}blog/`} class="text-ink-muted hover:text-ink transition-colors relative after:absolute after:bottom-[-4px] after:left-0 after:w-0 after:h-[1.5px] after:bg-crimson after:transition-all hover:after:w-full">
          Blog
        </a>
      </li>
    </ul>
  </nav>
</header>
